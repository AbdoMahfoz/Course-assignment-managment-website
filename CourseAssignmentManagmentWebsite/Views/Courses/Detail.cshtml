@using CourseAssignmentManagmentWebsite.Models
@model CourseDetailViewModel

@{
    ViewBag.Title = Model.Course.Name;
    int i = 0;
}

<div class="jumbotron">
    <h1>@Model.Course.Name</h1>
    <h3>@Model.Course.Id</h3>
</div>
<h1>Assignments</h1>
<hr/>
<div class="row">
    @foreach(var assign in Model.Assignments)
    {
        <div class="well col-md-12 @if (assign.Second) { <text>warning</text> } else { <text>alert</text> }">
            <div class="col-md-6">
                <h2>Assignment @((++i).ToString())</h2>
            </div>
            <div class="col-md-6">
                <a href="@Url.Action("Index", "Assignment", new { Id = assign.First.Id })" class="btn btn-primary">Go to assignment page</a>
            </div>
        </div>
    }
</div>
