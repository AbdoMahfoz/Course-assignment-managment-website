@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Welcome :)</h1>
    <p class="lead">Course assignment managment website is built by students, with love, to students.</p>
</div>

<div class="row">
    @if (User.IsInRole("student"))
    {
        <div class="col-md-6">
            <h2>View all registered courses</h2>
            <p>
                Click the button below to view all of the courses you are registered to.
            </p>
            <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301865">View all courses</a></p>
        </div>
        <div class="col-md-6">
            <h2>View my submissions</h2>
            <p>
                Click the button below all of your submissions in all of your registered courses
            </p>
            <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301866">My submissions</a></p>
        </div>
    }
    else
    {
        <div class="col-md-6">
            <h2>View all owned courses</h2>
            <p>
                Click the button below to view all of the courses you teach.
            </p>
            <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301865">View all courses</a></p>
        </div>
        <div class="col-md-6">
            <h2>View new submissions</h2>
            <p>
                Click the button below to show all un-processed submissions in all of your courses
            </p>
            <p><a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkId=301866">New submissions</a></p>
        </div>
    }
</div>