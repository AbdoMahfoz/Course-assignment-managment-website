@using CourseAssignmentManagmentWebsite.Models;
@model IQueryable<Course>

@{
    ViewBag.Title = "Courses";
}

<div class="row">
    @if (User.IsInRole("student"))
    {
        <div class="col-md-12"><h1>Registerd Courses</h1></div>
    }
    else
    {
        <div class="col-md-12"><h1>Owned Courses</h1></div>
    }
    @foreach(Course c in Model)
    {
        <div class="well col-md-12">
            <div class="col-md-6">
                <h2>@c.Name</h2>
                <h4>@c.Id</h4>
            </div>
            <div class="margin-top-20 col-md-6">
                <a href="@Url.Action("Courses", new { id = c.Id })" class="pull-right align-center btn btn-primary">View Details</a>
            </div>
        </div>
    }
</div>
